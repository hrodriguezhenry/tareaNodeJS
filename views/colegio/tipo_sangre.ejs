<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous"
    />
    <title>Estudiantes</title>
</head>
<body>

    <!-- Barra de Navegación -->
    <header>
        <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #000">
            <a class="navbar-brand" href=".">Henry Rodríguez</a>
            <button
                class="navbar-toggler d-lg-none"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapsibleNavId"
                aria-controls="collapsibleNavId"
                aria-expanded="false"
                aria-label="Toggle navigation"
            ></button>
            
            <div class="collapse navbar-collapse" id="collapsibleNavId">
                <ul class="navbar-nav me-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href=".">Estudiantes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./tipo_sangre">Tipo de Sangre</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <br>
    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal" style="color: #fff;  margin-left: 40px;">Nuevo</button>
      
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Datos del Tipo de Sangre</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formEstudiante" action="/tipo_sangre/crud_ts" method="post">
                    <div class="mb-3" style="padding: 10px;">
                        <input class="form-control" style="margin-bottom: 10px;" type="number" id="txt_id" name="txt_id" placeholder="ID (Opcional)">
                        <input class="form-control" style="margin-bottom: 10px;" type="text" id="txt_tiposangre" name="txt_tiposangre" placeholder="Tipo de Sangre">
                        <button type="submit" class="btn btn-info" style="color: #fff" id="btn_crear" name="btn_crear" value="crear">Agregar</button>
                        <button type="submit" class="btn btn-primary" id="btn_actualizar" name="btn_actualizar" value="actualizar">Actualizar</button>
                        <button type="submit" class="btn btn-danger" id="btn_borrar" name="btn_borrar" value="borrar" onclick="confirmDeletion(event)">Borrar</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
            </div>    
        </div>
    </div>

    <!-- Tabla -->
    <div class="table-responsive" style="max-width: 200px; padding-left: 40px;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tipo Sangre</th>
                </tr>
            </thead>
            <tbody>
                <% tiposSangre.forEach ((tipoSangre)=>{ %>
                <tr class="">
                    <td><%= tipoSangre.sangre %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script
        src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"
    ></script>

    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"
    ></script>

    <script>
        function confirmDeletion(event) {
            var confirmation = confirm("¿Desea eliminar este elemento?");
            var inputElementBorrar = document.getElementById('btn_borrar');
            
            if (!confirmation) {
                event.preventDefault();
                return;
            }

            document.getElementById("formEstudiante").submit();
        }
    </script>
</body>
</html>